{
  "name": "root",
  "author": "FamaLabs",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:watch": "gulp default",
    "prebuild:prod": "npm run clean:prod",
    "build:prod": "gulp build",
    "preversion": "npm run lint && npm run format",
    "prepare": "npm run build:prod && gulp copy-misc",
    "prepublishOnly": "npm test && npm run lint",
    "release": "lerna publish --conventional-commits --contents dist",
    "postpublish": "npm run clean:prod",
    "clean:prod": "gulp clean:prod",
    "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status",
    "lint": "npm run lint:packages",
    "lint:packages": "eslint 'packages/**/**.ts' --fix --ignore-pattern 'packages/**/*.spec.ts' --no-error-on-unmatched-pattern",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --no-cache"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@nestjs/mongoose": "^7.0.2",
    "@nestjs/swagger": "^4.6.1",
    "@nestjs/testing": "^7.5.1",
    "@typegoose/typegoose": "^7.4.1",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^26.0.15",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.14.6",
    "@types/passport-facebook": "^2.1.10",
    "@types/passport-google-oauth20": "^2.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "cache-manager": "^3.4.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cz-conventional-changelog": "^3.3.0",
    "delete-empty": "^3.0.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "mongoose": "^5.10.10",
    "node-mocks-http": "^1.9.0",
    "path": "^0.12.7",
    "prettier": "^2.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "supertest": "^6.0.1",
    "swagger-ui-express": "^4.1.4",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/packages/"
    ]
  }
}
