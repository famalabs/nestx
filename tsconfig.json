{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "composite": true,
    "paths": {
      "@famalabs/nestx-auth": ["packages/auth/dist"],
      "@famalabs/nestx-core": ["packages/core/dist"]
    },
    "incremental": true,
    "resolveJsonModule": true
  }
}
